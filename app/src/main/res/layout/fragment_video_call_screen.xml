<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/videoCallFrag_Container_CL"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.seeformescreen.videocall.VideoCallScreenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="@+id/audio_controlPanel_Layout_LL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <SurfaceView
            android:id="@+id/remoteView_SV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <SurfaceView
            android:id="@+id/localView_SV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@color/faded_black"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title_videoCall_Layout_CL">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/callTimer_Tv"
            android:text="00:01"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/callTitle_Tv"
            android:text="Video Call With Masoud"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:textSize="15sp"
            android:id="@+id/temperature_TV"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/faded_black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/audio_controlPanel_Layout_LL">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/endCall_Btn"
            android:background="@drawable/searchview_background"
            android:src="@drawable/ic_end_call"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/micOff_Imv"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_off"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/micOn_Imv"
            android:visibility="gone"
            android:background="@drawable/searchview_background"
            android:src="@drawable/ic_mic_on"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:visibility="gone"
            android:layout_height="60dp"
            android:id="@+id/toggleCamera_Btn"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_camera_off"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:id="@+id/switchCamera_Btn"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_switch_camera"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/speakerOff_Btn"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_volume_off_24"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/speakerOn_Btn"
            android:visibility="gone"
            android:background="@drawable/searchview_background"
            android:src="@drawable/baseline_volume_up_24"/>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar_seeForMeFrag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />
</androidx.constraintlayout.widget.ConstraintLayout>